<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.library.controller.LibrarianDashboardController"
            style="-fx-background-color: #FAFAFA;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 15 25;">
            <Label text="ðŸ“š" style="-fx-font-size: 28px;"/>
            <Label text="Librarian Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="welcomeLabel" text="Welcome, Librarian!" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #FF8C00; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #FF8C00; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 20;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0; -fx-padding: 20; -fx-min-width: 220;">
            <Label text="Navigation" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #999999; -fx-padding: 0 0 10 0;"/>

            <Button fx:id="requestsTabButton" text="ðŸ“‹ Borrow Requests" onAction="#switchToRequests" maxWidth="Infinity"
                    styleClass="nav-button-active"
                    style="-fx-background-color: #FFF5EE; -fx-text-fill: #FF8C00; -fx-font-size: 14px; -fx-font-weight: bold; -fx-alignment: CENTER-LEFT; -fx-padding: 12 15; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Button fx:id="inventoryTabButton" text="ðŸ“š Inventory" onAction="#switchToInventory" maxWidth="Infinity"
                    styleClass="nav-button"
                    style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 14px; -fx-alignment: CENTER-LEFT; -fx-padding: 12 15; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Button fx:id="membersTabButton" text="ðŸ‘¥ Members" onAction="#switchToMembers" maxWidth="Infinity"
                    styleClass="nav-button"
                    style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 14px; -fx-alignment: CENTER-LEFT; -fx-padding: 12 15; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Separator style="-fx-padding: 10 0;"/>

            <Label text="Quick Actions" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #999999; -fx-padding: 10 0 10 0;"/>

            <Button text="âŠ• Issue Book" onAction="#handleIssueBook" maxWidth="Infinity"
                    style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 15; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Button text="âŠ– Return Book" onAction="#handleReturnBook" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: #FF8C00; -fx-font-size: 13px; -fx-font-weight: bold; -fx-border-color: #FF8C00; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 15; -fx-cursor: hand;"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 30;">

            <!-- Requests View -->
            <VBox fx:id="requestsView" spacing="25">

                <!-- Statistics Cards -->
                <HBox spacing="20">
                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Label text="Pending Requests" style="-fx-text-fill: #666666; -fx-font-size: 13px;"/>
                        <Label fx:id="pendingRequestsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF8C00;"/>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Label text="Books Issued Today" style="-fx-text-fill: #666666; -fx-font-size: 13px;"/>
                        <Label fx:id="issuedTodayLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Label text="Overdue Returns" style="-fx-text-fill: #666666; -fx-font-size: 13px;"/>
                        <Label fx:id="overdueReturnsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF4444;"/>
                    </VBox>
                </HBox>

                <!-- Requests Table -->
                <VBox spacing="15" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label text="Borrow Requests" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="requestFilterCombo" promptText="Filter by status" prefWidth="150"
                                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0; -fx-border-width: 1.5;">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="All"/>
                                    <String fx:value="Pending"/>
                                    <String fx:value="Approved"/>
                                    <String fx:value="Rejected"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Button text="Refresh" onAction="#handleRefreshRequests"
                                style="-fx-background-color: transparent; -fx-text-fill: #FF8C00; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #FF8C00; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                    </HBox>

                    <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: transparent; -fx-background-radius: 8;">
                        <columns>
                            <TableColumn fx:id="reqIdColumn" text="Request ID" prefWidth="100"/>
                            <TableColumn fx:id="reqMemberColumn" text="Member" prefWidth="150"/>
                            <TableColumn fx:id="reqBookColumn" text="Book Title" prefWidth="200"/>
                            <TableColumn fx:id="reqDateColumn" text="Request Date" prefWidth="120"/>
                            <TableColumn fx:id="reqStatusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="reqActionColumn" text="Actions" prefWidth="180"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Inventory View -->
            <VBox fx:id="inventoryView" spacing="25" visible="false">

                <!-- Search and Filter -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Label text="Library Inventory" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="inventorySearchField" promptText="Search by title, author, ISBN..." HBox.hgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E0E0E0; -fx-border-width: 1.5; -fx-padding: 12; -fx-font-size: 14px;"/>

                        <Button text="Search" onAction="#handleInventorySearch"
                                style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>

                <!-- Inventory Table -->
                <VBox spacing="15" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: transparent; -fx-background-radius: 8;">
                        <columns>
                            <TableColumn fx:id="invIsbnColumn" text="ISBN" prefWidth="120"/>
                            <TableColumn fx:id="invTitleColumn" text="Title" prefWidth="250"/>
                            <TableColumn fx:id="invAuthorColumn" text="Author" prefWidth="180"/>
                            <TableColumn fx:id="invCategoryColumn" text="Category" prefWidth="130"/>
                            <TableColumn fx:id="invTotalColumn" text="Total Copies" prefWidth="100"/>
                            <TableColumn fx:id="invAvailableColumn" text="Available" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Members View -->
            <VBox fx:id="membersView" spacing="25" visible="false">

                <!-- Search Members -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Label text="Member Management" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="memberSearchField" promptText="Search by name, email, or member ID..." HBox.hgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E0E0E0; -fx-border-width: 1.5; -fx-padding: 12; -fx-font-size: 14px;"/>

                        <Button text="Search" onAction="#handleMemberSearch"
                                style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>

                <!-- Members Table -->
                <VBox spacing="15" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <TableView fx:id="membersTable" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: transparent; -fx-background-radius: 8;">
                        <columns>
                            <TableColumn fx:id="memberIdColumn" text="Member ID" prefWidth="100"/>
                            <TableColumn fx:id="memberNameColumn" text="Name" prefWidth="180"/>
                            <TableColumn fx:id="memberEmailColumn" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="memberJoinDateColumn" text="Join Date" prefWidth="120"/>
                            <TableColumn fx:id="memberBooksColumn" text="Books Out" prefWidth="100"/>
                            <TableColumn fx:id="memberStatusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="memberActionColumn" text="Actions" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <stylesheets>
        <String fx:value="@../styles.css"/>
    </stylesheets>
</BorderPane>
